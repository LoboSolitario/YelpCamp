<% include ../partials/header %>
    <div class="container ">
        <div class="row">
            <h1 style="text-align: center">Comment on the post </h1>
            <div style="width: 30%; margin:25px auto;">
                <form action="/campground/<%=campground_id%>/comment/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Comment:</label>
                        <textarea class="form-control" name="comment[text]"><%=comment.text%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campground" >Go Back</a>
            </div>
        </div>  
    </div>
<% include ../partials/footer %>
