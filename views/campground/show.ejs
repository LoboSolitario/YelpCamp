<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <li class="list-group-item active">list item 1</li>
                    <li class="list-group-item">list item 2</li>
                    <li class="list-group-item">list item 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                     <img class="img-resposive" src="<%= selectedCamp.image %>">
                     <div class="caption">
                         <h4 class="pull-right">$9.00</h4>
                         <strong><h4><%= selectedCamp.name %></h4></strong>
                         <p> <%= selectedCamp.description %></p>
                         <p>
                             <em>
                                 Submitted by <%=selectedCamp.author.name%>
                             </em>
                         </p>
                         <% if(currentUser && selectedCamp.author.id.equals(currentUser.id)){%>
                         <a href="/campground/<%=selectedCamp._id%>/edit" class="btn btn-warning">Edit</a>
                         <form class="delete-form" action="/campground/<%=selectedCamp._id%>?_method=DELETE"  method="POST">
                             <button class="btn btn-danger">Delete</button>
                         </form>
                         <% } %>
                     </div>
                     
                </div>
                <div class="well">
                    <div class="text-right">
                        <a href="/campground/<%=selectedCamp._id%>/comment/new" class="btn btn-success">Add a new comment</a>
                    </div>
                    
                    <hr>
                     <% selectedCamp.comment.forEach(function(comment){ %>
                    <p>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                                <% if(currentUser && comment.author.id.equals(currentUser.id)){%>
                                 <a href="/campground/<%=selectedCamp._id%>/comment/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
                                 <form class="delete-form" action="/campground/<%=selectedCamp._id%>/comment/<%=comment._id%>?_method=DELETE"  method="POST">
                                     <button class="btn btn-danger btn-xs">Delete</button>
                                 </form>
                                 <% }%>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            
        </div>
    </div>
    
<% include ../partials/footer %>

